<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.DetailActivity">



    <ImageView
            android:id="@+id/detail_movie_banner_imageview"
            android:layout_width="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            tools:text="Titulo Original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:id="@+id/detail_movie_title_textview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/detail_movie_banner_imageview"/>

    <RatingBar
            android:layout_width="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_height="wrap_content"
            tools:rating="3"
            android:stepSize="10"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:id="@+id/detail_movie_user_rate_ratingbar"
            app:layout_constraintStart_toEndOf="@+id/detail_movie_title_textview"
            app:layout_constraintTop_toTopOf="@+id/detail_movie_title_textview"/>

    <TextView
            tools:text="7.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_movie_user_rate_text_textview"
            android:textSize="10sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/detail_movie_user_rate_ratingbar"/>


    <TextView
            tools:text="Sinopse: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:text="@string/detail_movie_sinopse_hint_textview"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:id="@+id/detail_movie_sinopse_hint_textview"
            app:layout_constraintTop_toBottomOf="@id/detail_movie_title_textview"
            app:layout_constraintStart_toStartOf="@id/detail_movie_title_textview"/>

    <TextView
            tools:text="Texto Sinpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="6dp"
            android:id="@+id/detail_movie_sinopse_textview"
            app:layout_constraintTop_toBottomOf="@id/detail_movie_title_textview"
            app:layout_constraintStart_toEndOf="@id/detail_movie_sinopse_hint_textview"/>

    <TextView
            tools:text="Data de lanÃ§amento: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:text="@string/detail_movie_release_date_hint_textview"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:id="@+id/detail_movie_release_date_hint_textview"
            app:layout_constraintTop_toBottomOf="@id/detail_movie_sinopse_textview"
            app:layout_constraintStart_toStartOf="@id/detail_movie_title_textview"/>

    <TextView
            tools:text="10/02/2014"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="6dp"
            android:id="@+id/detail_movie_release_date_textview"
            app:layout_constraintTop_toBottomOf="@id/detail_movie_sinopse_textview"
            app:layout_constraintStart_toEndOf="@id/detail_movie_release_date_hint_textview"/>

    <ImageView
            android:visibility="gone"
            android:id="@+id/detail_movie_banner_background_imageview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_banner_round"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</android.support.constraint.ConstraintLayout>